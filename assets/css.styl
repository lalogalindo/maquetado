@import "nib"

$description = #8d8c8c
$lightgrey = #ccc
$title = #4face7

aside
    text-align: left

html
    font-family 'Roboto Condensed', sans-serif
    font-size: 18px

legend
    border-bottom: solid thin $lightgrey
    text-transform: uppercase
    width: 100%

    @media only screen and (max-width : 480px)
        margin-top: 10px
        padding-bottom: 10px

    @media only screen and (min-width : 481px) and (max-width : 1024px)
        margin-top: 10px
        padding-bottom: 15px

    @media only screen and (min-width: 1025px)
        margin-top: 0
        padding-bottom: 25px

    strong
        color: orange
        font-weight: normal

section
    padding: 20px 0

#ventas
    display: flex
    flex-direction: row
    justify-content: space-around
    text-align: center

    .filtros
        width: 15%

        .showFiltros
            display: none

        @media only screen and (max-width : 480px)
            background: white
            border: solid thin $lightgrey
            left: -250px
            padding: 0 30px
            position: absolute
            transition: ease all .5s
            width: initial
            z-index: 999

            .showFiltros
                display: block
                position: absolute
                right: -60px
                top: 10px
                transition: ease all .5s

    .filtros.active

        @media only screen and (max-width : 480px)
            left: 30px

            .showFiltros
                display: block
                position: absolute
                right: 10px
                top: 10px
    .items
        width: 85%

        .item
            margin-top: 10px
            text-align: left
            width: 150px

            @media only screen and (max-width : 480px)
                width: 120px

                img
                    height: auto

            img
                height: 150px

            .title
                color: orange
                font-size: .8em
                margin: 0 0 20px

            .old-price
                font-size: .9em
                margin: 0
                text-align: left
                text-decoration: line-through

            .new-price
                margin: 0
                text-align: left

            .comprar
                background: orange
                border: 0
                color: white
                height: 35px
                width: 100px

            .comparar
                font-size: .8em

.bulb
    margin: 10px auto
    text-align: center

    @media only screen and (max-width : 480px)
        width: 80px

        img
            height: 80px

    @media only screen and (min-width : 481px) and (max-width : 1024px)
        width: 180px

        img
            height: 180px

        p.title
            font-size: 1.2em

    @media only screen and (min-width: 1025px)
        width: 120px

    .title
        font-size: .78em

.carro
    @media only screen and (max-width : 480px)
        margin: 10px auto
        text-align: center
        width: 265px

    @media only screen and (min-width : 481px) and (max-width : 1024px)
        margin: 10px auto
        text-align: center
        width: 210px

    @media only screen and (min-width: 1025px)
        margin: 10px auto
        text-align: center
        width: 250px

    img
        width: 100%

    > .title,
    > .description
        margin: 4px 0 0

    > .title
        font-size: .8em
        text-transform: uppercase

    > .description
        color: $description
        font-size: .7em
        padding: 0 10px

.contenedor
    border: solid thin $lightgrey
    margin: 0 auto
    padding: 20px

    @media only screen and (min-width : 481px) and (max-width : 1024px)
        width: 800px

    @media only screen and (min-width: 1025px)
        width: 1000px

.filter
    list-style: none
    margin: 0
    padding: 0
    text-transform: uppercase

    li
        font-size: .75em

.filter-title
    font-weight: bolder
    margin: 20px 0 0

.flex
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-around
    text-align: center

.img-responsive
    display: block
    height: auto
    margin: 0 auto
    max-width: 100%

.rating
    direction: rtl
    unicode-bidi: bidi-override

    > span
        display: inline-block
        position: relative
        width: 1.1em

        &:hover:before,
        &:hover ~ span:before
           content "\2605"
           position: absolute

.title
    color: $title
